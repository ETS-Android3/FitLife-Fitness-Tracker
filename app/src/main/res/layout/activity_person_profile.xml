<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAECC2"
    android:orientation="vertical"
    android:paddingTop="50dp"
    tools:context=".PersonProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friendImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        tools:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/linProf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friendImage"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/friendUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="Username"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/friendFirst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="First Name"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/friendLast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="Last Name"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/friendEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="Email"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_gravity="center"
            android:src="@drawable/friends" />

    </LinearLayout>

    <Button
        android:id="@+id/person_send_friend_request"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/groupChallenge"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="#8BC34A"
        android:text="Send Friend Request"
        android:textSize="16sp" />

    <Button
        android:id="@+id/person_decline_friend_request"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/person_send_friend_request"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="#EC7676"
        android:text="Decline Friend Request"
        android:textSize="16sp" />

    <Button
        android:id="@+id/groupChallenge"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linProf"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="#4BBFEC"
        android:text="Go to Group Challenge"
        android:textSize="16sp" />


</RelativeLayout>