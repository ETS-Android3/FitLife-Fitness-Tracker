<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:gravity="center"
    android:padding="26dp"
    android:orientation="vertical"
    tools:context=".fitnessMain">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Fit Life - Fitness"
        android:textColor="#8BC34A"
        android:textSize="50sp"
        android:layout_marginTop="00dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Meet all of your fitness goals"
        android:textColor="#8BC34A"
        android:textSize="20sp"
        android:layout_marginBottom="00dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:id="@+id/userP3"
        />

    <Button
        android:id="@+id/btnTrack"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/sign_in_button"
        android:backgroundTint="#DAECC2"
        android:text="Meal Tracker"
        android:textColor="#8BC34A"
        android:textStyle="bold" />

    <Button

        android:id="@+id/physicals"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/sign_in_button"
        android:backgroundTint="#DAECC2"
        android:text="Physical Tracker"
        android:textColor="#8BC34A"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnTime"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/sign_in_button"
        android:backgroundTint="#DAECC2"
        android:text="Timley Review"
        android:textColor="#8BC34A"
        android:textStyle="bold" />

    <Button

        android:id="@+id/daily"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/sign_in_button"
        android:backgroundTint="#DAECC2"
        android:text="Daily Challenge"
        android:textColor="#8BC34A"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnGoHome2"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/sign_in_button"
        android:backgroundTint="#DAECC2"
        android:text="Home"
        android:textColor="#8BC34A"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnLogOut2"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/sign_in_button"
        android:backgroundTint="#DAECC2"
        android:onClick="logout"
        android:text="Log Out"
        android:textColor="#8BC34A"
        android:textStyle="bold" />

</LinearLayout>