<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupChallenges">

    <TextView
        android:id="@+id/groupText"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Group Challenge:"
        android:textColor="#8BC34A"
        android:textSize="42dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/placeHolder"
        android:layout_width="wrap_content"
        android:layout_height="42sp"
        android:layout_below="@+id/groupText"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="With"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/thereName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/placeHolder"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="First Name Last Name"
        android:textColor="#8BC34A"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/challenge"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_below="@+id/thereName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Group Challenge:"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/completeTask2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/challenge"
        android:layout_marginTop="350dp"
        android:text="Complete" />

    <Button
        android:id="@+id/notYet2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/completeTask2"
        android:text="Not Yet" />

</RelativeLayout>